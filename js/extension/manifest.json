{
  "manifest_version": 2,
  "name": "cwallet",
  "description": "An in-browser coinkit wallet.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:9000/*",
    "http://localhost:9001/*",
    "http://localhost:9002/*",
    "http://localhost:9003/*"
  ],
  "browser_action": {
    "default_title": "cwallet",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background-main.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content-main.js"]
  }]
}
